---
import BaseHead from '../components/BaseHead.astro';

const {
	content: {
    title,
    theme,
    image,
    video,
    description
  },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={description} description={description} />
	</head>

	<body class={`theme ${theme}`}>
    <div id="swup" class="transition-fade">
      <header>
        <nav>
          <a href="/">
            <span class="card-arrow reverse">âž¤</span>
            Back
          </a>
        </nav>
      </header>
      <main id="post-main">
        <article>
          <h1 class="title">{title}</h1>
          {image && <img class="img" src={image}/> }
          {video && <video class="video" autoplay loop><source src={video}/></video>}
          <slot/>
        </article>
      </main>
    </div>
		<script src="../scripts/swup.js"></script>
	</body>
</html>

<style lang="scss">
  a {
    &:hover {
      .card-arrow.reverse {
        transform: rotate(180deg)translateY(3px)translateX(4px);
      }   
    }
  }

  .card-arrow.reverse {
    display: inline-block;
    transform: rotate(180deg)translateY(3px);
    transition: 0.25s all ease-out;
  }

  #post-main {
    display: flex;
    align-items: center;

    .title {
      font-size: 5rem;
      margin: 0.5rem 0;

      @media screen and (max-width: 768px) {
        font-size: 3rem;
      }
    }

    img, video {
      width: auto;
      height: 400px;
      border-radius: 8px;

      @media screen and (max-width: 768px) {
        width: 100%;
        height: auto;
      }
    }
  }
</style>