<style lang="scss">
  a {
    &:hover {
      .card-arrow.reverse {
        transform: rotate(180deg)translateY(3px)translateX(4px);
      }   
    }
  }
  .card-arrow.reverse {
    display: inline-block;
    transform: rotate(180deg)translateY(3px);
    transition: 0.25s all ease-out;
  }

  #post-main {
    display: flex;
    align-items: center;
    margin: 6rem 0;

    @media screen and (max-width: 800px) {
      margin: 3rem 0;
    }

    .title {
      font-size: 6rem;
      margin: 0.5rem 0;
    }

    article {
      font-size: 1.2rem;
    }

    img {
      width: auto;
      height: auto;
      max-width: 400px;
      max-height: 400px;
      border-radius: 8px;
      margin-left: 1rem;

      @media screen and (max-width: 800px) {
        display: none;
      }
    }

    section {
      display: flex;
      align-items: center;

      div {
        flex-basis: 75%;
      }
      img {
        flex-basis: 25%;
      }
    }
  }
</style>