import BaseHead from '../components/BaseHead.astro';

const title = "Hello - Thomas Vidas";
const description = "Thomas Vidas' super cool about page";
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
    <div id="swup" class="transition-fade">
      <header>
        <nav>
          <a href="/">
            <span class="card-arrow reverse">âž¤</span>
            <strong>Back</strong>
          </a>
        </nav>
      </header>
      <main id="post-main">
        <article>
          <section>
            <div>
              <h1 class="title">Hello ðŸ‘‹</h1>
              <p>
                I'm Thomas, a software engineer living in Boston, MA. I'm currently a
                <strong>Principal Software Engineer</strong> at
